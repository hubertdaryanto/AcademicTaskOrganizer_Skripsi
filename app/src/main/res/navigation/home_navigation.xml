<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/tugasMataKuliahList"
        android:name="com.hubertdaryanto.academicprocrastinationreducer_skripsi.view.fragment.TugasMataKuliahListFragment"
        android:label="Tugas Kuliah Saya"
        android:color="@android:color/black"
        tools:layout="@layout/fragment_tugas_mata_kuliah_list">
        <action
            android:id="@+id/action_homeFragment_to_addTugasFragment"
            app:destination="@id/addTugasFragment" />
        <action
            android:id="@+id/action_homeFragment_to_editTugasFragment"
            app:destination="@id/editTugasFragment" />
    </fragment>
    <fragment
        android:id="@+id/editTugasFragment"
        android:name="com.hubertdaryanto.academicprocrastinationreducer_skripsi.view.fragment.EditTugasKuliahFragment"
        android:label="Ubah Tugas Kuliah"
        tools:layout="@layout/fragment_edit_tugas_kuliah">
        <action
            android:id="@+id/actionSaveTugas"
            app:destination="@id/tugasMataKuliahList"
            app:popUpToInclusive="true" />
        <argument
            android:name="tugasKuliahKey"
            app:argType="long" />
    </fragment>
    <fragment
            android:id="@+id/addTugasFragment"
            android:name="com.hubertdaryanto.academicprocrastinationreducer_skripsi.view.fragment.AddTugasKuliahFragment"
            android:label="Tambah Tugas"
            tools:layout="@layout/fragment_add_tugas_kuliah">
        <action
                android:id="@+id/action_addTugasFragment_to_addTugasCommitmentFragment"
                app:destination="@id/addTugasCommitmentFragment" />
    </fragment>
    <fragment
        android:id="@+id/taskCompletionHistoryFragment"
        android:name="com.hubertdaryanto.academicprocrastinationreducer_skripsi.view.fragment.TugasKuliahCompletionHistoryFragment"
        android:label="Riwayat Penyelesaian Tugas"
        tools:layout="@layout/fragment_tugas_kuliah_completion_history">
        <action
            android:id="@+id/action_taskCompletionHistoryFragment_to_editTugasFragment"
            app:destination="@id/editTugasFragment" />
    </fragment>
    <fragment
            android:id="@+id/addTugasCommitmentFragment"
            android:name="com.hubertdaryanto.academicprocrastinationreducer_skripsi.view.fragment.AddTugasKuliahFinishCommitmentFragment"
            android:label="Tambah Tugas Kuliah" />
    <fragment
            android:id="@+id/homeFragment"
            android:name="com.hubertdaryanto.academicprocrastinationreducer_skripsi.view.fragment.dashboard.HomeFragment"
            android:label="Home">
        <action
                android:id="@+id/action_homeFragment_to_taskCompletionHistoryFragment"
                app:destination="@id/taskCompletionHistoryFragment" />
        <action
                android:id="@+id/action_homeFragment_to_addTugasFragment2"
                app:destination="@id/addTugasFragment" />
    </fragment>
    <fragment
            android:id="@+id/mataKuliahListFragment"
            android:name="com.hubertdaryanto.academicprocrastinationreducer_skripsi.view.fragment.dashboard.MataKuliahListFragment"
            android:label="Mata Kuliah"
            tools:layout="@layout/fragment_mata_kuliah_list">
        <action
                android:id="@+id/action_mataKuliahListFragment_to_tugasMataKuliahList"
                app:destination="@id/tugasMataKuliahList" />
    </fragment>
</navigation>