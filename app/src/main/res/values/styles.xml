<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/ToolbarThemeBlack</item>
    </style>

    <style name="input_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
<!--        <item name="android:background">#14212121</item>-->
        <item name="android:textSize">@dimen/text_body_size</item>
        <item name="android:textColorHint">#9A000000</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

