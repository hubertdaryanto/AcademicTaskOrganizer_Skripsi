<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="subject"
            type="com.example.academictaskorganizer_skripsi.database.Subject" />
        <variable
            name="subjectClickListener"
            type="com.example.academictaskorganizer_skripsi.view.SubjectListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{() -> subjectClickListener.onClick(subject)}"
            android:padding="0dp">

            <TextView
                android:id="@+id/text_view_subjectName_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{subject.subjectName}"
                android:textAppearance="@style/Base.CardView"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>