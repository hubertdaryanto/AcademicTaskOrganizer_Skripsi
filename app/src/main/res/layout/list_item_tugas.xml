<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
<variable
    name="tugas"
    type="com.example.academictaskorganizer_skripsi.database.TugasKuliah" />
        <variable
            name="clickListener"
            type="com.example.academictaskorganizer_skripsi.view.TugasKuliahListener" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/text_view_tugas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="My First Note"
                    android:textAppearance="@style/Base.CardView"
                    android:textSize="24dp" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>